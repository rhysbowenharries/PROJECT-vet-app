<h2>Edit <%= @animal.name %></h2>

<form method="POST" action="/lesser-danes/<%= @animal.id %>">

  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">First Name:</label>
      <input type="text" name="name" id="name" value="<%= @animal.name %>"/>
    </div>

  <div class="form-wrapper">

    <div class="form-el">
      <label for="stardate_of_birth">stardate of birth:</label>
      <input type="text" name="stardate_of_birth" id="stardate_of_birth" value="<%= @animal.stardate_of_birth %>"/>
    </div>

  <div class="form-wrapper">

    <div class="form-el">
      <label for="type_of_animal">type of animal:</label>
      <input type="text" name="type_of_animal" id="type_of_animal" value="<%= @animal.type_of_animal %>"/>
    </div>

  <div class="form-wrapper">

    <div class="form-el">
      <label for="owner_information">Owner Information:</label>
      <input type="text" name="owner_information" id="owner_information" value="<%= @animal.owner_information %>"/>
    </div>

  <div class="form-wrapper">

    <div class="form-el">
      <label for="treatment_notes">treatment notes:</label>
      <input type="text" name="treatment_notes" id="treatment_notes" value="<%= @animal.treatment_notes %>"/>
    </div>

  <div class="form-wrapper">
    <label for="vet_select">Select vet:</label>
      <select name="vet_tag" id="vet_select">
        <% @vets.each do |vet| %>
          <option value=<%= vet.id %>selected><%= vet.name.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Edit Animal"/>
    </div>

  </div>
